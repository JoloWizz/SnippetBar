<Window x:Class="SnippetBar.AddSnippetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hantera Snip" Height="350" Width="320"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#2D2D30" WindowStyle="None">

    <!-- En tunn ram runt hela fönstret -->
    <Border BorderBrush="#555" BorderThickness="1">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titel -->
                <RowDefinition Height="*"/>
                <!-- Innehåll -->
                <RowDefinition Height="Auto"/>
                <!-- Knappar -->
            </Grid.RowDefinitions>

            <!-- Rubrik -->
            <TextBlock Text="Redigera Snip" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Formulär -->
            <StackPanel Grid.Row="1">
                <Label Content="Namn på knapp:" Foreground="#CCC" Padding="0"/>
                <TextBox x:Name="txtTitle" Height="25" Margin="0,5,0,15" Padding="2"/>

                <Label Content="Innehåll (Text/Macro):" Foreground="#CCC" Padding="0"/>
                <TextBox x:Name="txtContent" Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                         Margin="0,5,0,15" Padding="2" VerticalScrollBarVisibility="Auto"/>

                <Label Content="Färgkodning:" Foreground="#CCC" Padding="0"/>
                <ComboBox x:Name="cbColor" Height="30" Margin="0,5,0,0">
                    <ComboBoxItem Content="Standard (Grå)" Tag="#3E3E42" IsSelected="True"/>
                    <ComboBoxItem Content="Viktigt (Röd)" Tag="#D32F2F" Background="#D32F2F"/>
                    <ComboBoxItem Content="Info (Blå)" Tag="#1976D2" Background="#1976D2"/>
                    <ComboBoxItem Content="Bra (Grön)" Tag="#388E3C" Background="#388E3C"/>
                    <ComboBoxItem Content="Varning (Gul)" Tag="#FBC02D" Background="#FBC02D"/>
                    <ComboBoxItem Content="Lila" Tag="#7B1FA2" Background="#7B1FA2"/>
                    <ComboBoxItem Content="Svart" Tag="#000000" Background="#000000" Foreground="White"/>
                </ComboBox>
            </StackPanel>

            <!-- Knappar (Längst ner) -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Avbryt" IsCancel="True" Width="80" Height="30" Margin="0,0,10,0"
                        Background="#444" Foreground="White" BorderThickness="0"/>
                <Button Content="Spara" Click="Save_Click" IsDefault="True" Width="80" Height="30"
                        Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>